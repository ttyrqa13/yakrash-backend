# Переменные окружения для YaKrash Backend

# База данных PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/yakrash_db

# JWT секрет (ОБЯЗАТЕЛЬНО поменять на свой!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Срок действия токена
JWT_EXPIRES_IN=7d

# Порт сервера
PORT=3000

# Окружение (development / production)
NODE_ENV=development

# CORS (домены которым разрешен доступ)
CORS_ORIGIN=http://localhost:3000,https://textworks.ru

# Email настройки (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# URL фронтенда (для ссылок в письмах)
FRONTEND_URL=https://textworks.ru

# Размер аватарок (в байтах, 5MB)
MAX_AVATAR_SIZE=5242880

# Поддерживаемые форматы аватарок
ALLOWED_AVATAR_TYPES=image/jpeg,image/png,image/webp
